@require "./palette.styl"

::selection 
  background: $selectedBgColor;
  color: $selectedColor;


html {
  font-family: sans-serif; /* 1 */
  -ms-text-size-adjust: 100%; /* 2 */
  -webkit-text-size-adjust: 100%; /* 2 */
}
body {
  margin: 0;
  position: relative;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    font-size: 15px;
    line-height: 2;
    color: #555;
    background: #fff;
}
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
menu,
nav,
section,
a,
summary {
  display: block;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 10px 0 10px;
}
p {
  margin: 10px 0 10px 0;
}
li > p {
  margin: 0 0 0 0;
}
ul {
  margin: 0 0 0 0;
}
a {
    line-height: 36px;
    color: #555;
    text-decoration: none;
    outline: none;
    word-wrap: break-word;
    border-bottom-color: #ccc;
}
hr {
  margin: 20px 0;
  height: 2px;
}


// 页面加载出来动画
@keyframes closeSlide 
 0%
    width 300px
 100%
    width 0px


// 内容宽度
.container {
  position: relative;
  min-height: 100%;
  transition: padding 0.3s ease-in	
}
.header-inner {
  margin: 0 auto;
  width: 700px;
}
@media (min-width: 1600px) {
  .container .header-inner {
    width: 900px;
  }
}
.main {
  padding-bottom: 150px;
}
.main-inner {
  margin: 80px auto 0;
  width: 700px;
}
@media (min-width: 1600px) {
  .container .main-inner {
    width: 900px;
  }
}



#slide {
	position: fixed;
	right: 0;
	top: 0;
	bottom: 0;
	transition: width 0.3s ease-in;
	flex-grow: 0;
	width: 0px;
	background: #d39393;
}
.slideOpened {
	width: 300px !important;
}
.slideOpenedContainer {
	padding-right: 300px;
}
.toggleButton {
	position: fixed;
	right: 10px;
	bottom: 20%;
}