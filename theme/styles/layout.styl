@require "./palette.styl"

::selection 
  background: $selectedBgColor;
  color: $selectedColor;


html {
  font-family: sans-serif; /* 1 */
  -ms-text-size-adjust: 100%; /* 2 */
  -webkit-text-size-adjust: 100%; /* 2 */
}
body {
  margin: 0;
  position: relative;
    font-family: 'Lato', "PingFang SC", "Microsoft YaHei", sans-serif;
    font-size: 15px;
    line-height: 2;
    color: #555;
    background: #fff;
}
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
main,
menu,
nav,
section,
a,
summary {
  display: block;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  margin: 10px 0 10px;
}
p {
  margin: 10px 0 10px 0;
}
li > p {
  margin: 0 0 0 0;
}
ul {
  margin: 0 0 0 0;
}
a {
    line-height: 36px;
    color: #555;
    text-decoration: none;
    outline: none;
    word-wrap: break-word;
    border-bottom-color: #ccc;
}
hr {
  margin: 20px 0;
  height: 2px;
}
